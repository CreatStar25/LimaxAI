---
// src/components/BlogCard.astro
import { Image } from 'astro:assets';

const { post } = Astro.props;
const { data, slug } = post;

// 格式化日期
const formattedDate = data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="flex flex-col h-full overflow-hidden bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
  {/* 封面图链接区域 */}
  <a href={`/${data.lang}/${slug.split('/').pop()}`} class="block aspect-[16/9] overflow-hidden">
    <Image 
      src={data.image} 
      alt={data.title} 
      width={600} 
      height={340} 
      class="object-cover w-full h-full hover:scale-105 transition-transform duration-500"
    />
  </a>

  <div class="flex flex-col flex-1 p-6">
    {/* 标签区 */}
    <div class="flex flex-wrap gap-2 mb-3">
      {data.tags.map((tag) => (
        <span class="px-2.5 py-1 text-xs font-medium text-blue-600 bg-blue-50 rounded-md">
          {tag}
        </span>
      ))}
    </div>

    {/* 标题 */}
    <h2 class="mb-3 text-xl font-bold leading-tight text-gray-900 group">
      <a href={`/${data.lang}/${slug.split('/').pop()}`} class="hover:text-blue-600 transition-colors">
        {data.title}
      </a>
    </h2>

    {/* 摘要 */}
    <p class="flex-1 mb-4 text-sm leading-relaxed text-gray-600 line-clamp-3">
      {data.description}
    </p>

    {/* 底部作者与时间 */}
    <div class="flex items-center pt-4 mt-auto border-t border-gray-100">
      <div class="flex items-center justify-center w-8 h-8 mr-3 font-bold text-white bg-yellow-400 rounded-full">
        {/* 这里模拟截图中的 B 图标 */}
        {data.author.charAt(0)}
      </div>
      <div>
        <p class="text-xs font-semibold text-gray-900">{data.author}</p>
        <p class="text-xs text-gray-500">{formattedDate}</p>
      </div>
      <div class="ml-auto text-xs text-gray-400">
        {/* 预估阅读时间逻辑可后续添加 */}
        5 min read
      </div>
    </div>
  </div>
</article>