---
// src/components/BlogCard.astro
import { Image } from 'astro:assets';

const { post } = Astro.props;
const { data, slug } = post;

// 格式化日期
const formattedDate = data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="flex flex-col h-full overflow-hidden bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
  {/* 封面图链接区域 */}
  <a href={`/${data.lang}/${slug.split('/').pop()}`} class="block aspect-[16/9] overflow-hidden bg-gray-100 group">
    <Image 
      src={data.image} 
      alt={data.title} 
      width={600} 
      height={340} 
      format="webp"
      inferSize={true} 
      class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"
    />
  </a>

  <div class="flex flex-col flex-1 p-6">
    {/* 1. 标签区：限制一行 (flex-nowrap)，超出隐藏 */}
    <div class="flex flex-nowrap gap-2 mb-3 overflow-hidden">
      {data.tags.map((tag) => (
        <span class="flex-shrink-0 px-2.5 py-1 text-xs font-medium text-blue-600 bg-blue-50 rounded-md whitespace-nowrap">
          {tag}
        </span>
      ))}
    </div>

    {/* 2. 标题：限制 2 行，超出省略号 */}
    <h2 class="mb-2 text-xl font-bold leading-tight text-gray-900 group line-clamp-2 h-[3.25rem]">
      <a href={`/${data.lang}/${slug.split('/').pop()}`} class="hover:text-blue-600 transition-colors">
        {data.title}
      </a>
    </h2>

    {/* 3. 摘要：限制 2 行，超出省略号 */}
    <p class="mb-4 text-sm leading-relaxed text-gray-600 line-clamp-2">
      {data.description}
    </p>

    {/* 底部作者与时间 */}
    <div class="flex items-center pt-4 mt-auto border-t border-gray-100">
      {/* 作者名字太长也可能需要截断，这里加了 truncate */}
      <div class="flex items-center min-w-0">
        <p class="text-xs font-semibold text-gray-900 truncate pr-2">{data.author}</p>
      </div>
      <div class="ml-auto flex-shrink-0">
        <p class="text-xs text-gray-500">{formattedDate}</p>
      </div>
    </div>
  </div>
</article>